<Window x:Class="RealEstateSystem.ViewAds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewAds" Height="300" Width="400">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Height="200" HorizontalAlignment="Left" Margin="12,12,0,0" Name="AdGrid" VerticalAlignment="Top" Width="354" SelectionChanged="AdGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Path=Title}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Path=Description}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Show Details" Height="23" HorizontalAlignment="Left" Margin="12,218,0,0" Name="details" VerticalAlignment="Top" Width="75" />
        <Button Content="Close" Height="23" HorizontalAlignment="Left" Margin="291,218,0,0" Name="close" VerticalAlignment="Top" Width="75" Click="close_Click" />
    </Grid>
</Window>
