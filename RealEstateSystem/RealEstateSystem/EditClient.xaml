<Window x:Class="RealEstateSystem.EditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditClient" Height="300" Width="400" Loaded="Window_Loaded">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Height="200" HorizontalAlignment="Left" Margin="0,12,0,0" Name="EditClientt" VerticalAlignment="Top" Width="252" SelectionChanged="EditClientt_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding Path=FirstName}"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding Path=LastName}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Update Client" Height="23" HorizontalAlignment="Left" Margin="291,12,0,0" Name="update" VerticalAlignment="Top" Width="75" Click="update_Click" />
        <Button Content="Delete Client" Height="23" HorizontalAlignment="Left" Margin="291,41,0,0" Name="eldete" VerticalAlignment="Top" Width="75"  />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="303,217,0,0" Name="cancel" VerticalAlignment="Top" Width="75" Click="cancel_Click" />
    </Grid>
</Window>
